# Functions to unify archive management in linux CLI environments
function compress {
  case "${1,,}" in
    *.tar.bz2) tar cjf $@;;
    *.tar.gz| *.tgz) tar czf $@;;
    *.zip) zip $@;;
    *.rar) rar a $@;;
    *) printf "Cannot operate on unknown file extention \"%s\"\n" "${1}";;
  esac
}

