# Create a new alias
function mkalias {
    echo "alias $@" >> ${HOME}/.bashrc.d/aliases
    alias $@
}

# Remove an alias
function rmalias {
    unalias $1 && sed -i "/alias $1\=/d" ~/.bashrc.d/aliases
}

