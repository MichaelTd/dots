function extract {
  case "${1,,}" in # Compare lowercased filename for known extensions.
    *.7z| *.7za) 7z x "${1}";;
    *.tar) tar -xf "${1}";;
    *.tar.gz| *.tar.z| *.tgz) tar -xzf "${1}";;
    *.tar.bz2| *.tbz2) tar -xjf "${1}";;
    *.tar.xz| *.txz) tar -Jxf "${1}";;
    *.bz2) bunzip2 "${1}";;
    *.rar) rar x "${1}";;
    *.gz) gunzip "${1}";;
    *.zip| *.jar) unzip "${1}";;
    *.z ) uncompress "${1}";;
    * ) printf "Cannot operate on unknown file extention \"%s\"\n" "${1}" ;;
  esac
}

