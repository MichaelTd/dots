# ~/.bashrc.d/aliases
#!/usr/bin/env bash

if [ -x /usr/bin/dircolors ]; then
    # Color support
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto --group-directories-first'
    alias la='ls --all --human-readable --color=auto --group-directories-first'
    alias ll='ls -l --all --human-readable --color=auto --group-directories-first'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'
    alias grep='grep --color=auto -in'
    alias egrep='egrep --color=auto'
    alias fgrep='fgrep --color=auto'
else
    alias ls='ls --group-directories-first'
    alias la='ls --all --human-readable --group-directories-first'
    alias ll='ls -l --all --human-readable --group-directories-first'
    alias grep='grep -in'
fi

alias du='du -h'
alias df='df -h'

# pms=( emerge pacman "apt-get" zypper yum )
#
# for (( pmi=0 ; pmi<="${#pms[@]}" ; pmi++ )); do
#   if [[ -x $(which "${pms[pmi]}" 2> /dev/null) ]]; then
#     export pmi
#     break
#   fi
# done

if [[ -n $(which emerge 2> /dev/null) ]]; then
    alias search='emerge -s' install='sudo emerge -av' remove='sudo emerge -avC' update='sudo emerge --sync' upgrade='sudo emerge -avuND --with-bdeps=y @world' cleanup='sudo emerge --ask --depclean'
elif [[ -n $(which pacman 2> /dev/null) ]]; then
    alias search='pacman -Ss' install='sudo pacman -S' remove='sudo pacman -R' update='sudo pacman -Sy' upgrade='sudo pacman -Syu' cleanup='sudo pacman -Rsn'
elif [[ -n $(which apt-get 2> /dev/null) ]]; then
    alias search='apt search' install='sudo apt-get install --install-suggests' remove='sudo apt-get remove --purge' update='sudo apt-get update' upgrade='sudo apt-get dist-upgrade' cleanup='sudo apt-get autoremove'
elif [[ -n $(which zypper 2> /dev/null) ]]; then
    alias search='zypper search' install='sudo zypper install' remove='sudo zypper remove --clean-deps' update='sudo zypper refresh' upgrade='sudo zypper update' cleanup='sudo zypper rm -u'
elif [[ -n $(which yum 2> /dev/null) ]]; then
    alias search='yum search' install='sudo yum install' remove='sudo yum remove' update='sudo yum check-update' upgrade='sudo yum update' cleanup='sudo yum autoremove'
fi

# Mount
alias mntc='sudo mount -t auto /dev/sdc1 /mnt/thumb'
alias mntd='sudo mount -t auto /dev/sdd1 /mnt/thumb'
alias mnte='sudo mount -t auto /dev/sde1 /mnt/thumb'
alias mntf='sudo mount -t auto /dev/sdf1 /mnt/thumb'

# PC
alias halt='sudo shutdown -h' # Use with "now", "HH:MM" or any other valid (by shutdown) TIME construct.
alias reboot='sudo shutdown -r' # Use with "now", "HH:MM" or any other valid (by shutdown) TIME construct.

# alias mc='mc -a' # In case of malconfigured terminals
alias enx='emacsclient -nw'
alias fixnet='ping -c 1 www.microsoft.com||sudo rc-service dhcpcd restart'
alias cal='cal -m' # First Day Monday Calendars

# Perfect alias candidates are one liners or functions that take no arguments.
alias wanip='dig +short myip.opendns.com @resolver1.opendns.com'
alias rmdl='find -L . -name . -o -type d -prune -o -type l -exec rm -i {} +'
alias propaideia='for a in {1..9}; do for b in $(seq 1 $a); do printf "%dx%d=%2d\t" $b $a $((b*a));done;printf "\n";done'
alias ttt='for a in {1..10}; do let tt="${a} * 10";for b in $(seq $a $a $tt);do printf "%4d" $b;done; printf "\n";done'
# https://twitter.com/liamosaur/status/506975850596536320
#alias fuck='sudo $(history -p \!\!)'
alias gcl='git clone'
alias gfc='git fetch'
alias gst='git status'
alias gdf='git diff'
alias gaa='git add --all'
alias gat='git add .'
alias gcm='git commit -m'
alias gps='git push'
alias glg='git log --graph --pretty="%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset" --abbrev-commit'
alias gco='git checkout'
alias gpl='git pull --rebase'
alias grb='git rebase'
