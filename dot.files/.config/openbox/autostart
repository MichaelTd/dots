# No double sourcing
[ ! $(command -v rcm) ] && source ~/.bashrc.d/functions.bash

rcm 9 compton

# A nice status bar (before gui as we'll need that tray)
# nice -n 9 tint2 &
nice -n 9 tint2 -c ~/.config/tint2/taskbar &>/dev/null &
nice -n 9 tint2 -c ~/.config/tint2/panel &>/dev/null &

