# Quit BSPWM
super + shift + l
    bspc quit

super + l
    ${HOME}/bin/xlock.sh

super + {r,Tab}
    rofi -show {run,window}

super + F1
    xterm

super + F2
    firefox

super + F3
    emacs

super + F4
    xterm -e mc

# Workstation Monitor
super + {Right,Left}
    bspc desktop -f {next,prev}

# Audio
super + {Up,Down}
    ${HOME}/bin/sndvol {+,-}

# Screenshot
Print
    xfce4-screenshooter
