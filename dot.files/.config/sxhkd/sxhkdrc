super + alt + Escape
      pkill -x panel; bspc quit

super + l
      ${HOME}/bin/xlock.sh

# Quit BSPWM - pkill -x panel; bspc quit
super + shift + l
      bspc quit

super + r
      rofi -show run

super + Tab
      rofi -show window

super + e
      xterm -e mc

super + Return
      xterm

super + F1
      xterm

super + F2
      firefox

super + F3
      emacs

super + F4
      gentoo

# Workstation Monitor
super + Right
	bspc monitor -f next

super + Left
	bspc monitor -f prev

# Sound
super + Up
	${HOME}/bin/sndvol +

super + Down
	${HOME}/bin/sndvol -
