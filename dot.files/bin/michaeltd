    ${green}â•­â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•®${reset}
    ${green}â”‚                                                     â”‚${reset}
    ${green}â”‚${reset}           ${bold}${green}${bg_blue}Michael Tsouchlarakis / michaeltd${reset}         ${green}â”‚${reset}
    ${green}â”‚                                                     â”‚${reset}
    ${green}â”‚${reset}        ${bg_black}Work:${reset}  tsouchlarakis@gmail.com               ${green}â”‚${reset}
    ${green}â”‚${reset}        ${bg_black}FOSS:${reset}  Gentoo Linux avocado.                 ${green}â”‚${reset}
    ${green}â”‚                                                     â”‚${reset}
    ${green}â”‚${reset}         ${bg_black}Web:${reset}  ${dim}https://${reset}${yellow}michaeltd${reset}${dim}.netlify.com/${reset}        ${green}â”‚${reset}
    ${green}â”‚${reset}      ${bg_black}GitLab:${reset}  ${dim}https://gitlab.com/${reset}${green}michaeltd          ${green}â”‚${reset}
    ${green}â”‚${reset}         ${bg_black}npm:${reset}  ${dim}https://npmjs.com/${reset}~${red}michaeltd          ${green}â”‚${reset}
    ${green}â”‚${reset}       ${bg_black}Toots:${reset}  ${dim}https://mastodon.technology/${reset}@${magenta}tdm${reset}      ${green}â”‚${reset}
    ${green}â”‚                                                     â”‚${reset}
    ${green}â”‚${reset}        ${bg_black}Card:${reset}  ${red}curl -sL ${dim}${white}tinyurl.com/${reset}${magenta}mtd-bcard${dim}${white}|sh${reset}     ${green}â”‚${reset}
    ${green}â”‚                                                     â”‚${reset}
    ${green}â•°â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¯${reset}

