# Check http://conky.sourceforge.net/config_settings.html for the list of settings
# Check http://conky.sourceforge.net/variables.html for the list of variables

# - Conky settings - #
update_interval 1
total_run_times 0
net_avg_samples 1
cpu_avg_samples 1
if_up_strictness link

imlib_cache_size 0
double_buffer yes
background yes
format_human_readable

# - Text settings - #
use_xft yes
xftfont terminus:size=10
xftalpha 0.8
override_utf8_locale no
text_buffer_size 4096
short_units

# - Window specifications - #
own_window_class Conky
own_window yes
own_window_type normal
own_window_transparent yes
own_window_argb_visual yes
#own_window_argb_value 200
own_window_colour 082103
#own_window_colour 151515
#own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_hints sticky,skip_taskbar,skip_pager

alignment mr
gap_x 64
gap_y 0
minimum_size 510 650
maximum_width 510
max_text_width 0

# - Graphics settings - #
no_buffers yes
uppercase no
cpu_avg_samples 2
net_avg_samples 2
use_spacer none
top_name_width 18
top_cpu_separate false

draw_shades no
draw_borders no
stippled_borders 1
draw_graph_borders yes
stippled_borders 5
#border_inner_margin 0
#border_outer_margin 0
border_width 1
default_color white
default_shade_color black
draw_outline no
default_outline_color black

TEXT
